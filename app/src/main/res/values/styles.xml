<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"/>

    <style name="EntryList"/>

    <style name="EntryList.PlatformName">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EntryList.PlatformEntries">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EntryList.ListItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="EntryList.ItemIcon">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="EntryList.ItemContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EntryList.ItemHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EntryList.ItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EntryList.ItemDestination" parent="EntryList.ItemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="EntryList.ItemTimeTo" parent="EntryList.ItemTitle">
        <item name="android:gravity">end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EntryList.ItemCurrentLocation">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#546E7A</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>